!!!
%html
  %head
    %title= include_page_title
    %link{:rel => "icon", :type => "image/gif", :href => "/favicon.gif"}
    %link{:rel => 'stylesheet', :href => '/stylesheets/screen.css', :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => '/stylesheets/message.css', :type => 'text/css'}
    = include_required_css
    %script{:type => "text/javascript", :src => link_to("/javascripts/mootools-core-1.4.5.js")}
    %script{:type => "text/javascript", :src => link_to("/javascripts/MooToolsAdapter.js")}
    %script{:type => "text/javascript", :src => link_to("/javascripts/underscore-1.3.1.js")}
    %script{:type => "text/javascript", :src => link_to("/javascripts/backbone.js")}
    %script{:type => "text/javascript", :src => link_to("/javascripts/handlebars.js")}
    %script{:type => "text/javascript", :src => link_to("/javascripts/backbone.handlebars.js")}
    = include_required_js

  %body
    %div#wrapper
      %div#header
        %div#nav
          %div#timeframe-toggler.toggler
            %label#timeframe-label last 1 hour
            %ul#timeframes
          %div#share-toggler.toggler
            %label#share-label Share

      %div#content
        = yield

      %div#footer
        Visage
        |
        %a{:href => link_to("/profiles/new")} Explore
        |
        %a{:href => link_to("/profiles")} Profiles


